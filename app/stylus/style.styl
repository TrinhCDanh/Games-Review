//---------------------------- HOME -----------------------------------------------------
.main-content
	margin-bottom 20px    
.intro-review
	.x-related-item
		width 100%
		display flex
		background-color bg-box
		.x-related-content
			width 48%
		.x-related-caption
			width 62%
			*
				color lighttext
			h4
			.descript
				overflow hidden
				text-overflow ellipsis
				display -webkit-box    /* khoảng cách dòng */
				-webkit-box-orient vertical
				//margin-bottom 15px
			h4
				margin-top 0px
				max-height 56px      /* Chiều cao tối đa */
				font-size 20px
				line-height 1.4em
				-webkit-line-clamp 2/* Số dòng hiển thị */
			.descript
				max-height 59px      /* Chiều cao tối đa */
				font-size 14px
				line-height 1.4em
				-webkit-line-clamp 3/* Số dòng hiển thị */

@media only screen and (max-width: 1197px) and (min-width: 991px)
	.intro-review
		.x-related-item
			.x-related-caption
				.descript
					max-height 39.5px      /* Chiều cao tối đa */
					-webkit-line-clamp 2/* Số dòng hiển thị */

@media only screen and (max-width: 730px)
	.intro-review
		.x-related-item
			width 49.7%
			flex-flow wrap
			.x-related-content
			.x-related-caption
				width 100%
				h4
				.descript
					overflow visible
					max-height 250px
					text-overflow visible
					display block
@media only screen and (max-width: 550px)
	.intro-review
		.x-related-item
			width 100%



					
