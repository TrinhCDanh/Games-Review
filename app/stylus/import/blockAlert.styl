.blockPlusAlert 
  width 100%
  height 100%
  display flex
  position fixed
  z-index 105
  background-color rgba(0,0,0,0)
  font-family 'Signika', sans-serif
  .adbtitle 
    background-color #1d272b
    padding 10px 20px
    color #e5fbfb
  .win 
    align-self center
    width 50%
    margin auto
    background-color #37474f
    font-size 20px
    box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
    text-align justify
    animation bounceInDown 0.5s
  .adbcontent 
    padding 20px
    color #e5fbfb
  .adbreload 
    text-align right
    padding 10px 20px
  button 
    outline none
    border none
    border-radius 25px
    background-color #27a89f
    padding 5px 15px
    cursor pointer
    transition all 0.25s
    &:hover 
      padding 5px 20px
