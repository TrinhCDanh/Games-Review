.feature-slick 
	background-color black
.feature-slick-content
	padding 0	
.feature-slick-container
	display grid
	grid-template-columns 66% 34%
	grid-template-rows auto auto

	
[class*="x-feature-item"]
	position relative
	.x-feature-content
		height 100%
		img
			width 100%
			height 100%
	&::after
		content ''
		absolute top left
		width 100% 
		height 100%
	&:hover
		.light-text
			text-shadow 1px 0px 20px white
.x-feature-item-a
	grid-row 1/-1
	
.x-feature-item-a::after
	background linear-gradient(to left, rgba(0,0,0,0.2) 70%, rgba(0,0,0,1))
.x-feature-item-b::after
	background linear-gradient(to right, rgba(0,0,0,0.2) 60%, rgba(0,0,0,1))
.x-feature-item-c::after
	background linear-gradient(to right, rgba(0,0,0,0.2) 60%, rgba(0,0,0,1))

.x-feature-caption 
	absolute top left
	width 100%
	height 100%
	display flex
	align-items flex-end
	flex-flow wrap
	background linear-gradient(to bottom, rgba(0,0,0,0.2) 40%, rgba(0,0,0,1))
	z-index 1
	> *
		width 100%
		color white
	.x-feature-title
		padding 10px
		.light-text
			font-weight bold
			transition 0.25s
		h2
			font-size 30px
		h3
			font-size 18px	
		span
			margin-right 10px
			.fa 
				margin-right 5px
				
@media only screen and (max-width: 991px)
	.x-feature-item-a
		grid-area 1/1/2/3
	.feature-slick-content
		width 100%
	.feature-slick-container
		grid-template-columns 50% 50%
	[class*="x-feature-item"]::after 
		background: linear-gradient(rgba(0,0,0,0.2) 50%, rgba(0,0,0,0.9))
		
@media only screen and (max-width: 550px)
	.x-feature-item-a
		grid-area 1
		.light-text
			font-size 18px
	.feature-slick-container
		grid-template-columns 100%