.z-pagination
	ul
		padding 0
		margin 0 
		li 
			display inline-block
			margin 3px
			width 40px
			height 40px
			font-size 15px
			color text
			position relative
			overflow hidden
			line-height 40px
			transition all 0.5s
			z-index 1
			&:after
				z-index -1 
				transition all 0.5s ease
				background-color indigo
				transform rotate(45deg) scale(1.6, 1)
			&:hover:after
				background-color boycoy
				transform rotate(135deg) scale(1, 1.6)