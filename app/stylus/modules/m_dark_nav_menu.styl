.navbar 
	padding 15px 0
	font-size 14px
	font-family 'Questrial', sans-serif
	font-weight bold
	letter-spacing 1px
	border none
	background-color bluegreys
	> *
		font-family 'Questrial', sans-serif
	* a, .x-glyphicon
		transition 0.25s
.navbar-right > li > a
	color lighttext !important
.navbar-nav li a:hover 
	color dteal !important
	background-color bluegreys

.o-nav-menu 
	display flex
	position relative
	.x-glyphicon
		color lighttext
		&:hover
			color dteal

.menu-toggle 
	display none

.menu-toggle
.menu-search 
	padding-top 17px
	margin-left 25px

.navbar-brand 
	width 20%
	font-family 'Aldrich', cursive 
	font-size 30px
	font-weight bold

.o-collapse 
	width: 80%

