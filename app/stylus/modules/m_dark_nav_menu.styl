.searchbar 
	absolute top left
	display flex
	width 100%
	height 100%
	opacity 0
	visibility hidden
	transition all 0.4s
	background-color bluegreys

.searchbox 
	width 100%

.close-search 
	width 50px
	text-align center
	padding-top 17px
	background-color bluegreys
	color lighttext
#open-search
#close-search
	cursor pointer
input[name="search"] 
	width 100%
	height 100%
	outline none
	border none
	font-size 30px
	padding 10px 15px
	background-color bluegreys
	color lighttext

@media only screen and (max-width: 767px) 
	#myNavbar 
		position absolute
		top 100%
		left 15px
		background-color #263238
		width 100%
		.dropdown-menu
			a
				color lighttext
	.navbar-brand 
		width 100%
		text-align center

	.menu-search 
	.menu-toggle 
		width 50px
		margin-left 0px

	.menu-toggle 
		display block
		text-align left

	.navbar-collapse 
		margin-top 15px

