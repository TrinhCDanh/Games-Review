.x-related-content
	position relative
	background-color darktext
	overflow hidden
	img 
		max-width 100%
		opacity 0.8 
	.news-share
		absolute top left
		width 100%
		height 100%
		background-color rgba(#000,0)
		display flex
		align-items center
		flex-flow wrap
		justify-content center
		transition 0.25s
		.fa
			margin-bottom 20px
			opacity 0
		.fa-facebook-f
			transition 0.25s
		.fa-twitter
			transition 0.30s
		.fa-google-plus
			transition 0.35s
		
.x-related-item:hover
	.fa
		margin-bottom 0px
		opacity 1
	.news-share
		background-color rgba(#000,0.5)	

.x-widget-primary
.x-related-primary 
.row-eq-height
	display flex
	flex-flow wrap
	justify-content space-between
		
.x-related-primary 
	.x-related-item
		display table-cell
		background-color bg-box
		.x-related-caption
			padding 5px
			color lighttext
			h4
				line-height 24px
			span, p
				color lighttext
			//transition 0.25s
		&:hover
			.x-related-caption
				color dteal
				h4
					color dteal
	> *
		width 33%