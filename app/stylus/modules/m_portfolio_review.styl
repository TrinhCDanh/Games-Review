//--------------------- genre game	
.gs-genre-game
	.genre-tag
		color white
		padding 8px 20px
		background-color boycoy
		margin 5px
		overflow hidden
	.tag-ps4
		background-color #004098
	.tag-xbox
		background-color #117d10	
			
.z-thumb
	position relative
	z-index 1	
	.btn-point
		absolute top left
		height 100%
		width 100%
		//background-color rgba(black,0.5)
		display flex
		justify-content center
		align-items center
		transition 0.2s
		.point-content
			position relative
			width 60px
			height 60px
			//margin auto
			//margin-bottom -30px
			//z-index 1
			p
				text-align center
				line-height 60px
				font-size 30px
				font-family 'Aldrich', cursive
			&::after
				content ""
				absolute top left
				width 100%
				height 100%
				background-color dteal
				transform rotate(45deg)
				border-radius 15px
				z-index -1
				//animation point 7s linear infinite alternate
		
.caption 
	//max-height 200px
	//background-color bg-box
	padding 20px 10px
	color lighttext//#373d3f
	overflow hidden
	* a
		transition 0.25s
	.gs-genre-game
		//background-color bg-box
		padding 0
		.genre-tag
			font-size 10px
			font-weight bold
			padding 3px 6px
	.c-title
		font-weight bold
		font-size 25px
		margin 0
		a
			color lighttext
			&:hover
				color dteal
	.c-dec
		overflow hidden
		text-overflow ellipsis
		display -webkit-box    /* khoảng cách dòng */
		max-height 78.5px      /* Chiều cao tối đa */
		font-size 14px
		line-height 1.4em
		-webkit-line-clamp 4/* Số dòng hiển thị */
		-webkit-box-orient vertical
		margin-bottom 15px
	.c-read-more
		border 2px solid dteal
		color dteal
		padding 10px 0
		border-radius 20px
		transition 0.25s
		font-size 20px
		font-weight bold
		a
			color dteal
		&:hover
			background-color dteal
			color bg-box
			
.home-reviews
	.btn-point
		z-index 1
		background linear-gradient(to bottom, rgba(#2f3e47,0.2), rgba(#2f3e47,1) 90%)	
	.x-item
		height 100%
		background-color bg-box
		.caption
			padding 40px 10px	10px
		.news-share
			absolute top left
			width 100%
			height 100%
			display flex
			align-items center
			flex-flow wrap
			justify-content center
			transition 0.25s
			//z-index 2
			.fa
				margin-bottom 20px
				opacity 0
				z-index 2
			.fa-facebook-f
				transition 0.25s
			.fa-twitter
				transition 0.30s
			.fa-google-plus
				transition 0.35s
		&:hover	
			.fa
				margin-bottom 0px
				opacity 1
	.point-content
		margin auto
		margin-bottom -30px
		
.home-owl-carousel
	.owl-item
		z-index 1
	.x-item
		background-position center
		background-repeat no-repeat
		background-size cover
		z-index -1
	.box-post
		position relative
		z-index 10
		display flex
		flex-flow wrap
		align-items flex-end
		height 100%
		background linear-gradient(to bottom, rgba(#323a45,0.2), rgba(#323a45,0.9) 70%)	
	.z-thumb
		align-self flex-start
		.btn-point
			.point-content
				width 80px
				height 80px
				p
					line-height 80px
					font-size 45px
