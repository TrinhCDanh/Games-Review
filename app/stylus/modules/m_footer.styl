footer
	align-self flex-end
	width 100%
	background-color #141c1f
.footer-content
	padding 0
	> *
		color lighttext
		padding 5px
		margin 0

/* ---- Copyrights ---- */
.copyrights 
	background-color #11181a
	display flex
	flex-flow wrap
	> *
		display flex
		align-self center
		justify-content center
		padding 25px 0
	.copyrights-left
		color text
		text-align center
	.copyrights-right 
		.fa 
			position relative
			width 40px
			height 40px 
			text-align center
			line-height 40px 
			margin-left 5px 
			color white
			font-size 20px
			z-index 10
			transition 0.5s
			cursor pointer
			&:hover
				transform rotate(360deg)
				border-radius 50%
				
#back-to-top
	color #fff
	z-index 999 
	cursor pointer
	position fixed
	bottom 20px
	right 20px
	display none
	border-radius 0px
	border none
	background-color dteal
	transition background-color 0.5s
	&:hover
		background-color indigo